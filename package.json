{
	"name": "super-terminal",
	"version": "1.0.0",
	"description": "Terminal Manager",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/super-terminal/super-terminal.git"
	},
	"license": "MIT",
	"keywords": [],
	"main": "main.js",
	"bin": {
		"super-terminal": "dist/run-server.js"
	},
	"scripts": {
		"build": "rollup -c --environment NODE_ENV:production",
		"build:types": "tsc --project ./tsconfig.json",

		"build:watch": "rollup -c -w --environment NODE_ENV:development",
		"start:nodemon": "cross-env PORT=3878 nodemon --watch 'dist/**/*' dist/run-server.js",
		"test": "run-s build test:*",
		"start": "cross-env PORT=3878 node dist/run-server.js",
		"start:watch": "run-p build:watch start:nodemon",
		"typeorm": "typeorm-ts-node-commonjs",
		"prepare": "husky install",
		"start:electron": "electron-forge start",
		
		"package": "electron-forge package",
		"build:electron": "electron-forge make",
		"build:electron:dmg": "npx appdmg dmg.json \"Super Terminal.dmg\""
	},
	"engines": {
		"node": ">=10"
	},
	"devDependencies": {
		"@babel/core": "^7.18.0",
		"@babel/plugin-proposal-class-properties": "^7.17.12",
		"@babel/plugin-proposal-decorators": "^7.17.9",
		"@babel/plugin-transform-regenerator": "^7.18.0",
		"@babel/plugin-transform-runtime": "^7.18.0",
		"@babel/preset-env": "^7.16.11",
		"@babel/preset-typescript": "^7.16.7",
		"@electron-forge/cli": "^6.0.0-beta.65",
		"@electron-forge/maker-deb": "^6.0.0-beta.65",
		"@electron-forge/maker-rpm": "^6.0.0-beta.65",
		"@electron-forge/maker-squirrel": "^6.0.0-beta.65",
		"@electron-forge/maker-zip": "^6.0.0-beta.65",
		"@rollup/plugin-babel": "^5.3.1",
		"@rollup/plugin-commonjs": "^22.0.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.2.1",
		"@rollup/plugin-replace": "^4.0.0",
		"@semantic-release/exec": "^6.0.3",
		"@semantic-release/github": "^8.0.4",
		"@semantic-release/npm": "^9.0.1",
		"@types/js-yaml": "^4.0.5",
		"@types/lodash": "^4.14.185",
		"@types/node": "^16.11.10",
		"@types/sqlite3": "^3.1.8",
		"@types/tcp-port-used": "^1.0.1",
		"babel-plugin-const-enum": "^1.2.0",
		"babel-plugin-transform-typescript-metadata": "^0.3.2",
		"cross-env": "^7.0.3",
		"define-lazy-prop": "^3.0.0",
		"electron": "^17.4.11",
		"fast-glob": "^3.2.11",
		"husky": "^8.0.1",
		"is-docker": "^3.0.0",
		"is-wsl": "^2.2.0",
		"js-yaml": "^4.1.0",
		"lodash": "^4.17.21",
		"node-pre-gyp": "^0.11.0",
		"nodemon": "^2.0.16",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"reflect-metadata": "^0.1.13",
		"restify-websocket": "^1.0.0",
		"rollup": "^2.70.2",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"semantic-release": "^19.0.2",
		"ts-node": "10.7.0",
		"typescript": "^4.8.3"
	},
	"pkg": {
		"assets": [
			"node_modules/super-terminal-ui/dist",
			"node_modules/node-pty",
			"node_modules/sqlite3"
		]
	},
	"files": [
		"dist",
		"CHANGELOG.md",
		"LICENSE",
		"README.md"
	],
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"better-sqlite3": "^7.6.2",
		"electron-squirrel-startup": "^1.0.0",
		"express": "^4.18.1",
		"node-pty": "^0.10.1",
		"super-terminal-ui": "file:./ui",
		"tcp-port-used": "^1.0.2",
		"typeorm": "0.3.6",
		"ws": "^8.5.0"
	},
	"prettier": {
		"singleQuote": true,
		"printWidth": 120,
		"useTabs": true
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	},
	"syncWorkspaceDependencies": {
		"restify-websocket": {
			"type": "npm"
		}
	},
	"bugs": {
		"url": "https://github.com/super-terminal/super-terminal/issues"
	},
	"homepage": "https://github.com/super-terminal/super-terminal#readme",
	"author": "bugwheels94",
	"config": {
		"forge": {
			"packagerConfig": {
				"name": "Super Terminal",
				"executableName": "super-terminal",
				"icon": "super-terminal"
			},
			"makers": [
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"name": "super_terminal_app"
					}
				},
				{
					"name": "@electron-forge/maker-zip"
				},
				{
					"name": "@electron-forge/maker-deb",
					"config": {}
				},
				{
					"name": "@electron-forge/maker-rpm",
					"config": {}
				}
			]
		}
	}
}
